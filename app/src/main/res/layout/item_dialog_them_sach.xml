<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtMaSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mã sách"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:textColor="@android:color/black"
                android:textSize="18dp"  />

            <Spinner
                android:id="@+id/theloaiSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="18dp"

                />

            <EditText
                android:id="@+id/edtTenSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên sách"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edtTacGia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tác giả"
                android:paddingLeft="8dp"
                android:textColor="@android:color/black"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/edtNXB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhà xuất bản"
                android:paddingLeft="8dp"
                android:textColor="@android:color/black"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/edtGiaBia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Giá bìa"
                android:paddingLeft="8dp"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:inputType="number"/>
            <EditText
                android:id="@+id/edtSoLuong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số lượng"
                android:paddingLeft="8dp"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:inputType="number"/>
        </LinearLayout>


</LinearLayout>